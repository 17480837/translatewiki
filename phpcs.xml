<?xml version="1.0"?>
<ruleset>
	<rule ref="vendor/mediawiki/mediawiki-codesniffer/MediaWiki"/>
	<rule ref="Generic.Files.LineLength.TooLong">
		<severity>0</severity>
	</rule>
	<rule ref="Generic.PHP.NoSilencedErrors.Discouraged">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.NamingConventions.PrefixedGlobalFunctions.wfPrefix">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.NamingConventions.ValidGlobalName.wgPrefix">
		<severity>0</severity>
	</rule>
	<file>.</file>
	<file>bin/lint-bash</file>
	<arg name="extensions" value="php,php5,inc"/>
	<arg name="encoding" value="utf8"/>
	<exclude-pattern>vendor</exclude-pattern>
	<exclude-pattern>snedUdpMessage.php</exclude-pattern>
</ruleset>
