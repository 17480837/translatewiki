#!/bin/sh
# Used by repo* scripts to find the repository root
# similar to how like git tries to find .git

while true
do
	if [ ! -f "$DIR/REPOCONF" ]
	then
		DIR=`dirname $DIR`
	else
		. "$DIR/REPOCONF"
		break
	fi

	if [ "$DIR" = "/" ]
	then
		echo "Fatal: Could not find REPOCONF file"
		exit 1;
	fi
done
