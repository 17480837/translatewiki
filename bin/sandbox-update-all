#!/bin/sh

set -e

BASEDIR=$(dirname $0)
WIKINAME="sandbox.translatewiki.net"
WIKI=/www/$WIKINAME/w

cd $WIKI
REV=`git log --pretty='%h %ci (%cr)' -n 1`
"$BASEDIR/udpcast" "updating $WIKINAME from $REV..."

sudo -H -u betawiki "$BASEDIR/wikiupdate" "$WIKI"

REV=`git log --pretty='%h %ci (%cr)' -n 1`
"$BASEDIR/udpcast" "updated $WIKINAME to $REV"
